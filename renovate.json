{
  "extends": [
    "config:base",
    ":followTag(typescript, next)"
  ],
  "commitBody": "[skip ci]",
  "requiredStatusChecks": null,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "packagePatterns": [
        "*"
      ],
      "rangeStrategy": "pin"
    },
    {
      "depTypeList": [
        "engines",
        "peerDependencies",
        "resolutions"
      ],
      "rangeStrategy": "auto"
    }
  ]
}
